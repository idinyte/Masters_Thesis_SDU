<?xml version="1.0" ?>
<robot name="hydraulic_press">

  <!-- Base link (Top plate) -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.25 0.25 0.02"/>
      </geometry>
      <origin xyz="0 0 0" />
      <material name="blue">
        <color rgba="0.5 0.5 1 1" />
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.25 0.25 0.02"/>
      </geometry>
      <origin xyz="0 0 0" />
    </collision>
    <inertial>
      <mass value="1"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- Child link (Bottom plate) -->
  <link name="child_link">
    <visual>
      <geometry>
        <box size="0.25 0.25 0.02"/>
      </geometry>
      <origin xyz="0 0 -0.10" />
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1" />
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.25 0.25 0.02"/>
      </geometry>
      <origin xyz="0 0 -0.10" />
    </collision>
    <inertial>
      <mass value="1"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- Linear Actuated Prismatic Joint -->
  <joint name="press_joint" type="prismatic">
    <parent link="base_link"/>
    <child link="child_link"/>
    <origin xyz="0 0 -0.1"/>
    <axis xyz="0 0 -1"/>
    <limit lower="-0.2" upper="0" effort="1000" velocity="1"/>
    <dynamics damping="0" friction="0"/>
  </joint>

</robot>
